{
  "name": "@vonage/vonage-mcp-server-api-bindings",
  "version": "1.0.2",
  "main": "build/index.js",
  "bin": {
    "vonage-mcp-server": "build/index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && chmod +x build/index.js",
    "clean": "rm -rf build",
    "prebuild": "npm run clean",
    "prepack": "npm run build",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "prepare": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run format:check && npm run lint && npm run typecheck",
    "fix": "npm run format && npm run lint:fix"
  },
  "files": [
    "build"
  ],
  "keywords": [],
  "author": "Dwane Hemmings",
  "license": "Apache 2.0",
  "description": "MCP server to interact with Vonage APIs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@vonage/messages": "^1.20.1",
    "@vonage/server-sdk": "^3.22.1",
    "@vonage/voice": "^1.18.0",
    "dotenv": "^17.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.8.3"
  }
}
